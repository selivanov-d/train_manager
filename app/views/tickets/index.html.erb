<h1>Мои билеты</h1>

<% if @tickets.any? %>
    <table>
      <thead>
      <tr>
        <th>Номер поезда</th>
        <th>Станция и время отправления</th>
        <th>Станция и время прибытия</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @tickets.each do |ticket| %>
          <tr>
            <td><%= link_to ticket.train.number, train_path(ticket.train) %></td>
            <td>
              <%= ticket.departure_station.name %>
              <br/>
              <%= ticket.train.route.station_in_route(ticket.departure_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
            </td>
            <td>
              <%= ticket.arrival_station.name %>
              <br/>
              <%= ticket.train.route.station_in_route(ticket.arrival_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
            </td>
            <td><%= link_to 'Смотреть', ticket %></td>
            <td><%= link_to 'Удалить', ticket, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <h3>У вас пока что нет ни одного билета.</h3>
<% end %>
<br>

