<% @page_title = t '.title' %>

<div class="my-tickets">
  <% if @tickets.any? %>
      <table class="my-tickets_table">
        <thead>
        <tr>
          <th><%= t 'common.train_number' %></th>
          <th><%= t 'common.station_name_and_departure_time' %></th>
          <th><%= t 'common.station_name_and_arrive_time' %></th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.train.number, admin_train_path(ticket.train) %></td>
              <td>
                <%= link_to ticket.departure_station.name, admin_railway_station_path(ticket.departure_station) %>
                <br/>
                <%= ticket.train.route.station_in_route(ticket.departure_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
              </td>
              <td>
                <%= link_to ticket.arrival_station.name, admin_railway_station_path(ticket.arrival_station) %>
                <br/>
                <%= ticket.train.route.station_in_route(ticket.arrival_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
              </td>
              <td><%= link_to t('common.show'), ticket %></td>
              <td><%= link_to t('common.destroy'), ticket, method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% else %>
      <h3><%= t '.no_tickets' %></h3>
  <% end %>

  <div class="my-tickets_actions">
    <%= link_to t('common.return_to_search'), search_path, class: 'my-tickets_back-button' %>
  </div>
</div>
