<tr>
  <td><%= link_to ticket.train.number, train_path(ticket.train) %></td>
  <td>
    <%= link_to ticket.start_station.name, railway_station_path(ticket.start_station) %>
    <br/>
    <%= ticket.train.route.station_in_route(ticket.start_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
  </td>
  <td>
    <%= link_to ticket.finish_station.name, railway_station_path(ticket.finish_station) %>
    <br/>
    <%= ticket.train.route.station_in_route(ticket.finish_station.id).arrival_datetime.strftime('%d.%m.%Y %H:%M') %>
  </td>
</tr>
