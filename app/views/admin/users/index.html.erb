<% @page_title = 'Список пользователей' %>

<div class="admin-user-index">
<table class="admin-user-index_table">
  <thead>
  <tr>
    <th>Имя</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= link_to 'Смотреть', admin_user_path(user) %></td>
        <td><%= link_to 'Редактировать', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Удалить', admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
