<% @page_title = t '.title' %>

<div class="admin-user-index">
  <table class="admin-user-index_table admin-user-index-table">
    <thead>
    <tr>
      <th><%= User.human_attribute_name(:full_name) %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, admin_user_path(user) %></td>
          <td class="admin-user-index-table_controls">
            <%= link_to admin_user_path(user) do
              bs_icon 'eye-open', tooltip: t('common.show')
            end %>
            <%= link_to edit_admin_user_path(user) do
              bs_icon :pencil, tooltip: t('common.edit')
            end %>
            <%= link_to admin_user_path(user), method: :delete, data: { confirm: t('common.are_you_sure') } do
              bs_icon :remove, tooltip: t('common.destroy')
            end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
