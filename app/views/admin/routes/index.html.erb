<% @page_title = t '.title' %>

<div class="admin-routes-index">
  <table class="admin-routes-index_table">
    <thead>
    <tr>
      <th><%= t '.name' %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @routes.each do |route| %>
        <tr>
          <td><%= route.name %></td>
          <td><%= link_to t('common.show'), admin_route_path(route) %></td>
          <td><%= link_to t('common.edit'), edit_admin_route_path(route) %></td>
          <td><%= link_to t('common.destroy'), admin_route_path(route), method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div class="admin-routes-index_actions">
    <%= link_to t('.create'), new_admin_route_path, class: 'admin-routes-index_new-button' %>
  </div>
</div>
