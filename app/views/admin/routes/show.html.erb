<% @page_title = t '.title', route_name: @route.name %>

<div class="admin-route-show">
  <p>
    <strong><%= t '.trains' %>:</strong>
    <% if @route.trains.present? %>
      <ul>
        <%= render partial: 'admin/trains/train_as_list_item', collection: @route.trains, as: :train %>
      </ul>
  <% else %>
      <%= t ('.no_trains') %>
  <% end %>
  </p>

  <p>
    <strong><%= t '.stations' %>:</strong>
    <% if @route.railway_stations.present? %>
      <table class="route-stations">
        <thead>
        <th><%= RailwayStationsRoute.human_attribute_name(:position) %></th>
        <th><%= RailwayStation.human_attribute_name(:name) %></th>
        <th><%= RailwayStationsRoute.human_attribute_name(:arrival_date_and_time) %></th>
        <th><%= RailwayStationsRoute.human_attribute_name(:departure_date_and_time) %></th>
        </thead>
        <tbody>
        <%= render partial: 'admin/railway_stations/railway_station_as_table_row',
            collection: @route.railway_stations.ordered,
            as: :railway_station %>
        </tbody>
      </table>
  <% else %>
      <%= t ('.no_stations') %>
  <% end %>
  </p>

  <div class="admin-route-show_actions">
    <%= link_to t('common.return_to_routes'), admin_routes_path, class: 'admin-route-show_back-button' %>
    <%= link_to t('common.edit'), edit_admin_route_path(@route), class: 'admin-route-show_edit-button' %>
  </div>
</div>
