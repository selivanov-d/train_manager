<% @page_title = t '.title', train_number: @train.number %>

<table>
  <thead>
  <tr>
    <th><%= Carriage.human_attribute_name(:type) %></th>
    <th><%= Carriage.human_attribute_name(:upper_seats) %></th>
    <th><%= Carriage.human_attribute_name(:bottom_seats) %></th>
    <th><%= Carriage.human_attribute_name(:side_upper_seats) %></th>
    <th><%= Carriage.human_attribute_name(:side_bottom_seats) %></th>
    <th><%= Carriage.human_attribute_name(:seating_seats) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.type_name %></td>
        <td><%= carriage.upper_seats %></td>
        <td><%= carriage.bottom_seats %></td>
        <td><%= carriage.side_upper_seats %></td>
        <td><%= carriage.side_bottom_seats %></td>
        <td><%= carriage.seating_seats %></td>
        <td><%= link_to t('common.show'), admin_carriage_path(carriage) %></td>
        <td><%= link_to t('common.edit'), edit_admin_carriage_path(carriage) %></td>
        <td><%= link_to t('common.destroy'), admin_carriage_path(carriage), method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new'), new_admin_train_carriage_path %>
