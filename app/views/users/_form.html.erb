<% if @user.errors.any? %>
    <%= render 'common/errors', resource: @user %>
<% end %>

<%= form_for @user do |f| %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :family_name %><br>
      <%= f.text_field :family_name %>
    </div>

    <div class="actions">
      <%= f.submit t 'common.submit' %>
    </div>
<% end %>
