<%= form_for(@search, method: :post, url: search_path) do |f| %>
    <%= f.label :departure_station_id, 'От' %>
    <%= f.select :departure_station_id, RailwayStation.select(:id, :name).all.map { |station| [station.name, station.id] } %><br/>

    <%= f.label :arrival_station_id, 'До' %>
    <%= f.select :arrival_station_id, RailwayStation.select(:id, :name).all.map { |station| [station.name, station.id] } %><br/>
    <%= f.submit 'Найти' %>
<% end %>
