<% @page_title = t '.title' %>

<% content_for :sidebar do %>
    <% if @user.errors.any? %>
        <%= render 'common/errors', resource: @user %>
    <% end %>
<% end %>

<div class="devise-password-edit">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'devise-password-edit-form' }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="devise-password-edit-form_input-row">
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(<%= t('.minimal_length', minimal_length: @minimum_password_length) %>)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'devise-password-edit-form_input' %>
      </div>

      <div class="devise-password-edit-form_input-row">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'devise-password-edit-form_input' %>
      </div>

      <div class="devise-password-edit-form_actions">
        <%= f.submit t('.submit'), class: 'devise-password-edit-form_submit-button' %>
      </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
