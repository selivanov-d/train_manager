<% @page_title = t '.title' %>

<% content_for :sidebar do %>
    <% if @user.errors.any? %>
        <%= render 'common/errors', resource: @user %>
    <% end %>
<% end %>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), class: 'devise-user-signup-form' do |f| %>
    <div class="devise-user-signup-form_input-row">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'devise-user-signup-form_input' %>
    </div>

    <div class="devise-user-signup-form_input-row">
      <%= f.label :family_name %>
      <%= f.text_field :family_name, class: 'devise-user-signup-form_input' %>
    </div>

    <div class="devise-user-signup-form_input-row">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'devise-user-signup-form_input' %>
    </div>

    <div class="devise-user-signup-form_input-row">
      <%= f.label :password %>
      <% if @minimum_password_length %>
          <em>(<%= t '.minimal_length', minimal_length: @minimum_password_length %>)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", class: 'devise-user-signup-form_input' %>
    </div>

    <div class="devise-user-signup-form_input-row">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'devise-user-signup-form_input' %>
    </div>

    <div class="devise-user-signup-form_actions">
      <%= f.submit t('.singup'), class: 'devise-user-signup-form_submit-button' %>
    </div>
<% end %>

<%= render 'devise/shared/links' %>
