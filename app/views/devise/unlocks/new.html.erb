<% @page_title = t '.title' %>

<% content_for :sidebar do %>
    <% if @user.errors.any? %>
        <%= render 'common/errors', resource: @user %>
    <% end %>
<% end %>

<div class="devise-unlock-new">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: 'devise-unlock-new-form') do |f| %>
    <div class="devise-unlock-new-form_input-row">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'devise-unlock-new-form_input' %>
    </div>

    <div class="devise-unlock-new-form_actions">
      <%= f.submit t('.send_instructions'), class: 'devise-unlock-new-form_submit-button' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
