<% @page_title = t '.title' %>

<% content_for :sidebar do %>
    <% if @user.errors.any? %>
        <%= render 'common/errors', resource: @user %>
    <% end %>
<% end %>

<div class="devise-confirmation-new">
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'devise-confirmation-new-form' }) do |f| %>
      <div class="devise-confirmation-new-form_input-row">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'devise-confirmation-new-form_input' %>
      </div>

      <div class="devise-confirmation-new-form_actions">
        <%= f.submit t('.send_instructions'), class: 'devise-confirmation-new-form_submit-button' %>
      </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
